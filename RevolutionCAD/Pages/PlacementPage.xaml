<Page x:Class="RevolutionCAD.Pages.PlacementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RevolutionCAD.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Margin="10">
            <TextBlock VerticalAlignment="Center">Метод:</TextBlock>
            <ComboBox SelectedIndex="0">
                <ComboBoxItem Content="Последовательное по максимуму с размещённым"></ComboBoxItem>
                <ComboBoxItem Content="Последовательное по максимуму с размещёнными"></ComboBoxItem>
                <ComboBoxItem Content="Последовательное по максимуму с размещёнными и минимуму с неразмещёнными"></ComboBoxItem>
                <ComboBoxItem Content="Итерационное общее"></ComboBoxItem>
                <ComboBoxItem Content="Итерационное по парам"></ComboBoxItem>
                <ComboBoxItem Content="Итерационное методом Шафера"></ComboBoxItem>
            </ComboBox>
        </StackPanel>


    </Grid>
</Page>
